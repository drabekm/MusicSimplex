<Window x:Class="Music_Simplex.MainWindow"
        
        xmlns:uc="clr-namespace:Music_Simplex.CustomControls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Music_Simplex"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="340"/> 
            <RowDefinition Height="*"/> <!-- 110 px -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/> <!-- 560 px -->
        </Grid.ColumnDefinitions>
        
        <uc:MenuButtons x:Name="MenuButtons" Grid.Row="0" Grid.Column="0"/>
        <uc:AutoPlayer x:Name="AutoPlayer" Grid.Row="0" Grid.Column="1"/>
    </Grid>

</Window>
